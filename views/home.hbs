<div class="container d-flex flex-column align-items-center">
    <h1 class="mb-3">Welcome {{username}}</h1>
</div>
<hr>
<div class="container mt-5">
    <div class="card mt-1">
        {{#each allBlogs}}
        <hr style="margin:0px; color:rgb(0, 0, 0)">
        <div class="card-header">
            <h3>{{this.title}}</h3>
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <xmp>{{this.blogContent}}</xmp>
                <br>
                <footer class="blockquote-footer">{{this.author_name}}<cite title="Source Title"> -Brocamp
                        Calicut</cite></footer>
            </blockquote>
            <br>
            <p><a class="btn btn-outline-primary position-relative mb-auto" href="#" role="button">View Blog &raquo;</a></p>
        </div>
        {{/each}}
    </div>
    <hr>
</div>

<div class="container d-flex flex-column align-items-center">
    <p>Click on Logout Button to Logout</p>
    <form action="/logout" method="get">
        <button type="submit" class="btn btn-primary">Logout</button>
    </form>
</div>