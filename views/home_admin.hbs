<div class="container d-flex flex-column align-items-center">
  <h1 class="mb-3">Admin Panel</h1>
  <hr>
  <div>
    <a href="/admin/add-blogs" class="btn btn-primary">Add Blogs</a>
    <a href="/admin/users" class="btn btn-primary">User list</a>
    <a href="/adlogin/logout" class="btn btn-danger">Logout</a>
  </div>

  <div class="container mt-5">
    <table class="table table-bordered">
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Title</th>
          <th scope="col">Content</th>
          <th scope="col">Author</th>
        </tr>
      </thead>
      <tbody>
        {{#each allBlogs}}
        <tr>
          <th scope="row">{{@index}}</th>
          <td>{{this.title}}</td>
          <td><xmp>{{this.blogContent}}</xmp></td>
          <td>{{this.author_name}}</td>
          <td><span><a class="btn btn-warning" href="/admin/edit-blog/{{this._id}}" role="button">Edit</a></span></td>
          <td><span><a class="btn btn-danger" href="/admin/delete-blog/{{this._id}}"
                onclick="return confirm('Are you sure to delete {{this.title}}?') " role="button">Delete</a></span></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
