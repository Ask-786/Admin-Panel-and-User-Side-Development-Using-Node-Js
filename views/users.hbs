<div class="container d-flex flex-column align-items-center">
  <h1 class="mb-3">Admin Panel: Users</h1>
  <hr>
  <a href="/admin" class="btn btn-primary">Go back</a>
  <br>
  <form class="form-inline" action="/admin/users/user-search" method="POST">
    <div class="input-group">
      <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search"
        aria-describedby="search-addon" name="searchdata" />
      <button type="submit" class="btn btn-outline-primary">search</button>
    </div>
  </form>
  <div class="container mt-5">
    <table class="table table-bordered">
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Username</th>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Phone</th>
        </tr>
      </thead>
      <tbody>
        {{#each allUsers}}
        <tr>
          <th scope="row">{{@index}}</th>
          <td>{{this.username}}</td>
          <td>{{this.name}}</td>
          <td>{{this.email}}</td>
          <td>{{this.phone}}</td>
          <td><span><a class="btn btn-warning" href="/admin/users/edit-user/{{this._id}}" role="button">Edit</a></span>
          </td>
          <td><span><a class="btn btn-danger" href="/admin/users/delete-user/{{this._id}}"
                onclick="return confirm('Are you sure to delete {{this.username}}?') " role="button">Delete</a></span>
          </td>
        </tr>
        {{/each}}
        {{#each matchedUsers}}
        <tr>
          <th scope="row">{{@index}}</th>
          <td>{{this.username}}</td>
          <td>{{this.name}}</td>
          <td>{{this.email}}</td>
          <td>{{this.phone}}</td>
          <td><span><a class="btn btn-warning" href="/admin/users/edit-user/{{this._id}}" role="button">Edit</a></span>
          </td>
          <td><span><a class="btn btn-danger" href="/admin/users/delete-user/{{this._id}}"
                onclick="return confirm('Are you sure to delete {{this.username}}?') " role="button">Delete</a></span>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>